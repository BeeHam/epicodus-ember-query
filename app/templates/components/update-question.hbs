{{yield}}
{{#if showUpdateForm}}
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name" placeholder=question.name}}
    </div>

    <div class="form-group">
      <label for="content">Question</label>
      {{input value=content id="content" placeholder=question.content}}
    </div>

    <div class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id="notes" placeholder=question.notes}}
    </div>
    <button class="btn btn-primary" {{action 'update' question}} >Update</button>
  </form>
{{else}}
  <span class="clickable" {{action 'showUpdateForm'}}>Update?</span>
{{/if}}
